{
  "name": "kramers.app",
  "version": "1.0.0",
  "description": "Matt Kramers' personal website",
  "scripts": {
    "dev": "tailwindcss -i ./src/input.css -o ./src/tailwind.css --watch",
    "clean": "rimraf ./dist",
    "compile": "tailwindcss -i ./src/input.css -o ./src/tailwind.css",
    "package": "copyfiles -f ./src/*.html ./src/*.css -e ./src/input.css ./dist && copyfiles -f ./src/images/* ./dist/images",
    "build": "npm-run-all clean compile package"
  },
  "author": "Matt Kramers",
  "license": "MIT",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.3"
  }
}
